---
const allPosts = await Astro.glob("../posts/*.md");

import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Writing">
    <ul>
        {
            allPosts.map((post) => (
                <li>
                    <a href={post.url}>{post.frontmatter.title}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>
